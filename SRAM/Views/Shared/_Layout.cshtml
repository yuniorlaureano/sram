<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!--STYLESHEET-->
    <!--=================================================-->
    <!--Open Sans Font [ OPTIONAL ] -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=latin" rel="stylesheet">
    

    <!--Bootstrap Stylesheet [ REQUIRED ]-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">


    <!--Nifty Stylesheet [ REQUIRED ]-->
    <link href="~/Content/nifty.min.css" rel="stylesheet">

    <link href="~/Content/themes/type-c/theme-light.min.css" rel="stylesheet" />
    <!--Themify Icons [ OPTIONAL ]-->
    <link href="~/Content/themify-icons/themify-icons.min.css" rel="stylesheet">

    <!--Font Awesome [ OPTIONAL ]-->
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    
    <link href="~/Content/plugins/fooTable/css/footable.core.min.css" rel="stylesheet" />

    <link href="~/Content/loading.css" rel="stylesheet" />

    <link href="~/Content/Site.css" rel="stylesheet">

    <link href="~/Content/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
    

</head>
<body>
    <div id="container" class="mainnav-lg jumping mainnav-fixed navbar-fixed">

        <!--NAVBAR-->
        <!--===================================================-->
        <header id="navbar">
            <div id="navbar-container" class="boxed">

                <!--Brand logo & name-->
                <!--================================-->
                <div class="navbar-header">
                    <a class="navbar-brand">
                        <img src="~/Content/img/logo.png" alt="SRAM Logo" class="brand-icon">
                        <div class="brand-title">
                            <span class="brand-text" style="padding-left:15px; display:inline-block;"> SRAM</span>
                        </div>
                    </a>
                </div>
                <!--================================-->
                <!--End brand logo & name-->
                <!--Navbar Dropdown-->
                <!--================================-->
                <div class="navbar-content clearfix">
                    <ul class="nav navbar-top-links pull-left">

                        <!--Navigation toogle button-->
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <li class="tgl-menu-btn">
                            <a class="mainnav-toggle" href="#">
                                <i class="ti-view-list icon-lg"></i>
                            </a>
                        </li>
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <!--End Navigation toogle button-->
                        <!--Notification dropdown-->
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

                    </ul>
                    <ul class="nav navbar-top-links pull-right">

                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <!--End language selector-->
                        <!--User dropdown-->
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <li id="dropdown-user" class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle text-right">
                                <span class="pull-right">
                                    <img class="img-circle img-user media-object" src="~/Content/img/av1.png" alt="Profile Picture">
                                </span>
                                <div class="username hidden-xs">@Session["UserName"]</div>
                            </a>


                            <div class="dropdown-menu dropdown-menu-md dropdown-menu-right panel-default">

                                <!-- Dropdown footer -->
                                <div class="pad-all text-right">
                                    <a class="btn btn-primary">
                                        <i class="ti-unlock icon-fw"></i> Logout
                                    </a>
                                </div>
                            </div>
                        </li>
                        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                        <!--End user dropdown-->

                    </ul>
                </div>
                <!--================================-->
                <!--End Navbar Dropdown-->

            </div>
        </header>
        <!--===================================================-->
        <!--END NAVBAR-->

        <div class="boxed">
            <div id="content-container">
                <div class="loader-wrapper" style="display:none">
                    <div class="loader"></div>
                    <div class="loader-section section-left"></div>
                    <div class="loader-section section-right"></div>
                </div>
                <!--Page Title-->
                <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                <div class="row">
                    <div class="col-xs-12">
                        <div id="page-title" class="transparent-nav-container">
                            <div class="transparent-nav-child-brand">
                                <h1 class="page-header text-overflow">SRAM</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                <!--End page title-->
                <!--Breadcrumb-->
                <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
                <div id="page-content" style="padding:30px;">
                        @RenderBody()
                </div>
                <!--===================================================-->
                <!--End page content-->


            </div>
            <!--===================================================-->
            <!--END CONTENT CONTAINER-->
            <!--MAIN NAVIGATION-->
            <!--===================================================-->
            <nav id="mainnav-container">
                <div id="mainnav">
                    <div id="mainnav-menu-wrap">
                        <div class="nano">
                            <div class="nano-content">
                                <ul id="mainnav-menu" class="list-group">
                                    <li>
                                        <a href="@Url.Action("Index", "Pending")" class="can-show-loading">
                                            <i class="fa fa-headphones" aria-hidden="true"></i>
                                            <span class="menu-title">
                                                <strong>Pendientes de Auditar</strong>
                                            </span>
                                        </a>                                        
                                    </li>

                                    
                                       @if (Session["Grp_Codigo"].ToString().Equals("adm"))
                                        {
                                            <li>
                                                <a href="@Url.Action("Index", "Assign")" class="can-show-loading">
                                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                                    <span class="menu-title">
                                                        <strong>Asignar</strong>
                                                    </span>
                                                </a>
                                            </li>
                                        }                                            
                                    

                                    <li>
                                        <a href="@Url.Action("SearchAuditedAccount", "Auditory")" class="can-show-loading">
                                            <i class="fa fa-search" aria-hidden="true"></i>
                                            <span class="menu-title">
                                                <strong>Buscar Auditorias</strong>
                                            </span>
                                        </a>
                                    </li>

                                    @*<li>
                                        <a href="#" id="nav-asignar-reportes-link">
                                            <i class="fa fa-file-text" aria-hidden="true"></i>
                                            <span class="menu-title">
                                                <strong>Reportes</strong>
                                            </span>
                                        </a>
                                    </li>*@



                                </ul>

                            </div>
                        </div>
                    </div>
                    <!--================================-->
                    <!--End menu-->

                </div>
            </nav>

        </div>

        <!--===================================================-->
        <!-- END FOOTER -->
        <!-- SCROLL TOP BUTTON -->
        <!--===================================================-->
        <button id="scroll-top" class="btn"><i class="fa fa-chevron-up"></i></button>
        <!--===================================================-->



    </div>
    
    <script src="~/Scripts/js/jquery-2.2.1.min.js"></script>

    <script src="~/Scripts/js/bootstrap.min.js"></script>

    <script src="~/Scripts/js/fastclick.min.js"></script>

    <script src="~/Scripts/js/nifty.min.js"></script>

    <script src="~/Content/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>

    <script src="~/Content/plugins/fooTable/dist/footable.all.min.js"></script>

    <script src="~/Content/plugins/bootbox/bootbox.min.js"></script>

    <link href="~/Content/plugins/magic-check/css/magic-check.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/Utils.js"></script>

    <script src="~/Scripts/handlebars-v4.0.10.js"></script>
    
    @RenderSection("scripts", required: false)
    
    <script>
        $(".can-show-loading").on("click", function () {
            showColorLoading();
        });
    </script>
</body>
</html>

